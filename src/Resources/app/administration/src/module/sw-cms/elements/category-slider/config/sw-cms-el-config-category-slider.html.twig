<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_cms_element_category_slider_config %}
    <div class="sw-cms-el-config-category-slider">
        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_cms_element_category_slider_config_tabs %}
            <sw-tabs
                    position-identifier="sw-cms-element-config-category-slider"
                    class="sw-cms-el-config-category-slider__tabs"
                    default-item="content"
            >
                <template #default="{ active }">
                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_cms_element_category_slider_config_tab_content %}
                        <sw-tabs-item
                                :title="$tc('sw-cms.elements.general.config.tab.content')"
                                name="content"
                                :active-tab="active"
                        >
                            {{ $tc('sw-cms.elements.general.config.tab.content') }}
                        </sw-tabs-item>
                    {% endblock %}
                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_cms_element_category_slider_config_tab_options %}
                        <sw-tabs-item
                                :title="$tc('sw-cms.elements.general.config.tab.settings')"
                                name="settings"
                                :active-tab="active"
                        >
                            {{ $tc('sw-cms.elements.general.config.tab.settings') }}
                        </sw-tabs-item>
                    {% endblock %}
                </template>

                <template
                        #content="{ active }"
                >
                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_cms_element_category_slider_config_content %}
                        <sw-container
                                v-if="active === 'content'"
                                class="sw-cms-el-config-category-slider__tab-content"
                        >
                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_cms_element_category_slider_config_content_title %}
                                <sw-text-field
                                        v-model:value="element.config.title.value"
                                        :label="$tc('sw-cms.elements.categorySlider.config.label.title')"
                                        :placeholder="$tc('sw-cms.elements.categorySlider.config.placeholder.title')"
                                />
                            {% endblock %}

                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_cms_element_category_slider_config_content_category_assignment_type %}
                                <sw-single-select
                                        v-model:value="element.config.categories.source"
                                        class="sw-cms-el-config-category-slider__category-assignment-type-select"
                                        :label="$tc('sw-cms.elements.categorySlider.config.label.categoryAssignmentType')"
                                        :options="categoryAssignmentTypes"
                                        show-clearable-button
                                        @update:value="onChangeAssignmentType"
                                />
                            {% endblock %}

                            <template v-if="element.config.categories.source === 'category_stream'">
                                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                                {% block sw_cms_element_category_slider_config_content_category_stream_select %}
                                    <sw-entity-single-select
                                            v-model:value="element.config.categories.value"
                                            entity="category_stream"
                                            class="sw-cms-el-config-category-slider__category-stream-select"
                                            :label="$tc('sw-cms.elements.categorySlider.config.label.categoryStreamChoice')"
                                            :placeholder="$tc('sw-cms.elements.categorySlider.config.placeholder.categoryStreamChoice')"
                                            show-clearable-button
                                            @update:value="onChangecategoryStream"
                                    />
                                {% endblock %}

                                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                                {% block sw_cms_element_category_slider_config_content_category_stream_performance_hint %}
                                    <sw-alert
                                            class="sw-cms-el-config-category-slider__category-stream-performance-hint"
                                            variant="info"
                                    >
                                        {{ $tc('sw-cms.elements.categorySlider.config.textcategoryStreamPerformanceHint') }}
                                    </sw-alert>
                                {% endblock %}

                                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                                {% block sw_cms_element_category_slider_config_content_category_stream_preview %}
                                    <sw-modal
                                            v-if="showcategoryStreamPreview"
                                            :title="categoryStream.name"
                                            class="sw-cms-el-config-category-slider__category-stream-preview-modal"
                                            @modal-close="onClosecategoryStreamModal"
                                    >
                                        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                                        {% block sw_cms_element_category_slider_config_content_category_stream_preview_grid %}
                                            <sw-category-stream-grid-preview
                                                    :filters="categoryStream.apiFilter"
                                                    :columns="categoryStreamPreviewColumns"
                                                    :criteria="categoryStreamCriteria"
                                            />
                                        {% endblock %}
                                        <template #modal-footer>
                                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                                            {% block sw_cms_element_category_slider_config_content_category_stream_preview_action_close %}
                                                <sw-button
                                                        size="small"
                                                        @click="onClosecategoryStreamModal"
                                                >
                                                    {{ $tc('global.sw-modal.labelClose') }}
                                                </sw-button>
                                            {% endblock %}
                                        </template>
                                    </sw-modal>
                                {% endblock %}

                                <sw-container
                                        columns="1fr 1fr"
                                        gap="30px"
                                >
                                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                                    {% block sw_cms_element_category_slider_config_content_category_stream_sorting %}
                                        <sw-single-select
                                                v-model:value="element.config.categoryStreamSorting.value"
                                                :label="$tc('sw-cms.elements.categorySlider.config.label.categoryStreamSorting')"
                                                class="sw-cms-el-config-category-slider__category-stream-sorting"
                                                :disabled="!categoryStream"
                                                :placeholder="$tc('sw-cms.elements.categorySlider.config.placeholder.categoryStreamSorting')"
                                                :options="categoryStreamSortingOptions"
                                                show-clearable-button
                                        />
                                    {% endblock %}

                                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                                    {% block sw_cms_element_category_slider_config_content_category_stream_limit %}
                                        <sw-number-field
                                                v-model:value="element.config.categoryStreamLimit.value"
                                                :label="$tc('sw-cms.elements.categorySlider.config.label.categoryStreamLimit')"
                                                class="sw-cms-el-config-category-slider__category-stream-limit"
                                                :disabled="!categoryStream"
                                                :min="1"
                                        />
                                    {% endblock %}
                                </sw-container>

                                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                                {% block sw_cms_element_category_slider_config_content_category_stream_preview_link %}
                                    <div class="sw-cms-el-config-category-slider__category-stream-preview-link-container">
                                        <a
                                                class="sw-cms-el-config-category-slider__category-stream-preview-link link"
                                                :class="{ 'is--disabled': !categoryStream }"
                                                href="#"
                                                @click.prevent="onClickcategoryStreamPreview"
                                        >
                                            {{ $tc('sw-cms.elements.categorySlider.config.textcategoryStreamPreviewLink') }}
                                            <sw-icon
                                                    name="regular-long-arrow-right"
                                                    small
                                            />
                                        </a>
                                    </div>
                                {% endblock %}
                            </template>

                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_cms_element_category_slider_config_content_categories %}
                                <sw-entity-multi-select
                                        v-else
                                        v-model:entityCollection="categoryCollection"
                                        class="sw-cms-el-config-category-slider__categories"
                                        :label="$tc('sw-cms.elements.categorySlider.config.label.selection')"
                                        :placeholder="$tc('sw-cms.elements.categorySlider.config.placeholder.selection')"
                                        :context="categoryMultiSelectContext"
                                        :criteria="categoryMediaFilter"
                                        @update:entity-collection="oncategoriesChange"
                                >
                                    <template #selection-label-property="{ item }">
                                        <sw-category-variant-info
                                                :variations="item.variation"
                                        >
                                            {{ item.translated.name || item.name }}
                                        </sw-category-variant-info>
                                    </template>
                                    <template #result-item="{ item, index }">
                                        <slot
                                                name="result-item"
                                                v-bind="{ item, index }"
                                        >
                                            <sw-select-result
                                                    v-bind="{ item, index, selected: isSelected(item.id)}"
                                            >
                                                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                                                {% block sw_entity_single_select_base_results_list_result_label %}
                                                    <span class="sw-select-result__result-item-text">
                                    <sw-category-variant-info
                                            :variations="item.variation"
                                    >
                                        {{ item.translated.name || item.name }}
                                    </sw-category-variant-info>
                                </span>
                                                {% endblock %}
                                            </sw-select-result>
                                        </slot>
                                    </template>
                                </sw-entity-multi-select>
                            {% endblock %}
                        </sw-container>
                    {% endblock %}

                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_cms_element_category_slider_config_settings %}
                        <sw-container
                                v-if="active === 'settings'"
                                class="sw-cms-el-config-category-slider__tab-settings"
                        >

                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_cms_element_category_slider_config_settings_display_mode %}
                                <sw-select-field
                                        v-model:value="element.config.displayMode.value"
                                        :label="$tc('sw-cms.elements.general.config.label.displayMode')"
                                >
                                    <option value="standard">
                                        {{ $tc('sw-cms.elements.general.config.label.displayModeStandard') }}
                                    </option>
                                    <option value="cover">
                                        {{ $tc('sw-cms.elements.general.config.label.displayModeCover') }}
                                    </option>
                                    <option value="contain">
                                        {{ $tc('sw-cms.elements.general.config.label.displayModeContain') }}
                                    </option>
                                </sw-select-field>
                            {% endblock %}

                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_cms_element_category_slider_config_settings_vertical_align %}
                                <sw-select-field
                                        v-model:value="element.config.verticalAlign.value"
                                        :label="$tc('sw-cms.elements.general.config.label.verticalAlign')"
                                        :placeholder="$tc('sw-cms.elements.general.config.label.verticalAlign')"
                                >
                                    <option value="flex-start">
                                        {{ $tc('sw-cms.elements.general.config.label.verticalAlignTop') }}
                                    </option>
                                    <option value="center">
                                        {{ $tc('sw-cms.elements.general.config.label.verticalAlignCenter') }}
                                    </option>
                                    <option value="flex-end">
                                        {{ $tc('sw-cms.elements.general.config.label.verticalAlignBottom') }}
                                    </option>
                                </sw-select-field>
                            {% endblock %}

                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_cms_element_category_slider_config_settings_box_layout %}
                                <sw-select-field
                                        v-model:value="element.config.boxLayout.value"
                                        :label="$tc('sw-cms.elements.categoryBox.config.label.layoutType')"
                                >
                                    <option value="standard">
                                        {{ $tc('sw-cms.elements.categoryBox.config.label.layoutTypeStandard') }}
                                    </option>
                                    <option value="image">
                                        {{ $tc('sw-cms.elements.categoryBox.config.label.layoutTypeImage') }}
                                    </option>
                                    <option value="minimal">
                                        {{ $tc('sw-cms.elements.categoryBox.config.label.layoutTypeMinimal') }}
                                    </option>
                                </sw-select-field>
                            {% endblock %}

                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_cms_element_category_slider_config_settings_navigation %}
                                <sw-switch-field
                                        v-model:value="element.config.navigation.value"
                                        bordered
                                        :label="$tc('sw-cms.elements.categorySlider.config.label.navigation')"
                                />
                            {% endblock %}

                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_cms_element_category_slider_config_settings_rotate %}
                                <sw-switch-field
                                        v-model:value="element.config.rotate.value"
                                        bordered
                                        :label="$tc('sw-cms.elements.categorySlider.config.label.rotate')"
                                />
                            {% endblock %}

                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_cms_element_category_slider_config_settings_border %}
                                <sw-switch-field
                                        v-model:value="element.config.border.value"
                                        bordered
                                        :label="$tc('sw-cms.elements.categorySlider.config.label.border')"
                                />
                            {% endblock %}

                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_cms_element_category_slider_config_settings_min_width %}
                                <sw-text-field
                                        v-model:value="element.config.elMinWidth.value"
                                        :label="$tc('sw-cms.elements.categorySlider.config.label.minWidth')"
                                        :placeholder="$tc('sw-cms.elements.categorySlider.config.placeholder.minWidth')"
                                />
                            {% endblock %}
                        </sw-container>
                    {% endblock %}
                </template>
            </sw-tabs>
        {% endblock %}
    </div>
{% endblock %}
