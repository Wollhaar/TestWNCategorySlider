<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_cms_element_category_slider %}
    <div
            class="sw-cms-el-category-slider"
            :class="classes"
            :style="verticalAlignStyle"
    >
        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_cms_element_category_slider_title %}
            <div
                    v-if="element.config.title.value"
                    class="sw-cms-el-category-slider__title"
            >
                {{ element.config.title.value }}
            </div>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_cms_element_category_slider_content %}
            <div class="sw-cms-el-category-slider__content">
                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                {% block sw_cms_element_category_slider_arrow_left %}
                    <div
                            v-if="hasNavigation"
                            class="sw-cms-el-category-slider__navigation"
                    >
                        <sw-icon
                                class="sw-cms-el-category-slider__navigation-button"
                                name="regular-chevron-left"
                                size="24"
                        />
                    </div>
                {% endblock %}

                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                {% block sw_cms_element_category_slider_category_holder %}
                    <div
                            ref="categoryHolder"
                            class="sw-cms-el-category-slider__category-holder"
                            :style="sliderBoxMinWidth"
                    >
                        <template v-if="!element.data || !element.data.categories">
                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_cms_element_category_slider_demo_data %}
                                <sw-cms-el-category-box
                                        v-for="index in sliderBoxLimit"
                                        :key="index"
                                        :element="demoCategoryElement"
                                />
                            {% endblock %}
                        </template>

                        <template v-else>
                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_cms_element_category_slider_categories %}
                                <template
                                        v-for="(category, index) in element.data.categories"
                                        :key="index"
                                >
                                    <sw-cms-el-category-box
                                            v-if="index < sliderBoxLimit"
                                            :element="getCategoryEl(category)"
                                    />
                                </template>
                            {% endblock %}
                        </template>
                    </div>
                {% endblock %}

                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                {% block sw_cms_element_category_slider_arrow_right %}
                    <div
                            v-if="hasNavigation"
                            class="sw-cms-el-category-slider__navigation"
                    >
                        <sw-icon
                                class="sw-cms-el-category-slider__navigation-button"
                                name="regular-chevron-right"
                                size="24"
                        />
                    </div>
                {% endblock %}
            </div>
        {% endblock %}
    </div>
{% endblock %}
